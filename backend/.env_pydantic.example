# AI Bot Casino - Backend Configuration
# Copy this file to .env_pydantic and fill in the values

# ─── Application ───
DEBUG=false
MOCK_MODE=true

# ─── Database ───
DATABASE_NAME=aibotcasino
# GCP_PROJECT_ID=your-gcp-project-id

# ─── Authentication ───
# Generate with: openssl rand -hex 32
AUTH_JWT_SECRET=change-me-to-a-random-32-char-string-or-longer
AUTH_OTP_EXPIRES=15
AUTH_ACCESS_TOKEN_EXPIRES=720

# ─── reCAPTCHA v3 ───
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret
RECAPTCHA_SKIP=true

# ─── Casino Settings ───
TABLE_BETTING_DURATION=30
TABLE_SPIN_DURATION=5
TABLE_SETTLEMENT_DURATION=2
TABLE_PAUSE_DURATION=3
TABLE_MAX_BOTS=25
BOT_STARTING_BALANCE=1000
BOT_REFILL_AMOUNT=1000
BOT_REFILL_COOLDOWN_HOURS=24
BOT_MIN_BET=1
BOT_RATE_LIMIT_SECONDS=1.0

# ─── Email (MailerSend) ───
EMAIL_MAILER=mailersend_mailer
EMAIL_MAILER_DRY_RUN=true
# EMAIL_MAILERSEND_API_KEY=your-mailersend-api-key
# EMAIL_FROM_ADDRESS=noreply@aibotcasino.com

# ─── Frontend URL ───
FRONTEND_URL=http://localhost:5173

# ─── Logging ───
# LOG_FILE=backend.log
